<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/chart_pm"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"/>

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/chart_voc"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/chart_pm"
        android:layout_marginEnd="40dp" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/chart_co2"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/chart_pm"
        android:layout_marginBottom="160dp" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/chart_co"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_alignStart="@+id/chart_voc"
        android:layout_alignTop="@+id/chart_co2" />

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Current Data"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/pmVal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="pm" />

    <EditText
        android:id="@+id/vocVal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="voc"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/co2Val"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="120dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="co2" />

    <EditText
        android:id="@+id/coVal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="120dp"
        android:ems="10"
        android:hint="co"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_current_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="14dp"
        android:text="C Data" />

</RelativeLayout>